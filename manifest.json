{
  "manifest_version": 3,
  "name": "JATS (Job Application Tracking Service)",
  "version": "1.1.1",
  "description": "Logs job applications from LinkedIn, Handshake, and Jacobs Portal into your personal Google Sheet for easy tracking.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "identity"
  ],
  "oauth2": {
    "client_id": "1029000931349-rokqmdsn85labtshtoefhlqljub26v3e.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.file"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Log Job to Google Sheets"
  },
  "icons": {
    "16": "icons/icon128.png",
    "32": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://sheets.googleapis.com/*",
    "https://www.googleapis.com/*"
  ]
}
